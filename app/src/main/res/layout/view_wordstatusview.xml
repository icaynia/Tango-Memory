                android:textSize="14sp"
                android:text="5st : "/>

            <TextView
                android:id="@+id/view_wordstatusview_5st"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="0"
                />


